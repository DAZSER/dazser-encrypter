{
  "root": true,
  "extends": [
    "@sparticuz/eslint-config"
  ],
  "parserOptions": {
    "ecmaVersion": 2019,
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "rules": {
    "node/no-unpublished-require": ["error", {
      "allowModules": ["aws-sdk"]
    }],
    "no-console": ["warn", {
      "allow": ["warn", "error"]
    }]
  },
  "settings": {
    "import/core-modules": ["aws-sdk"]
  }
}
